@page
@model CompetitonMerit_ASP_Core.Pages.Schools.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add School</h1>

<h4>School</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="School.School_Name" class="control-label">School Name</label>
                <input asp-for="School.School_Name" class="form-control" />
                <span asp-validation-for="School.School_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="School.School_Address" class="control-label">School Address</label>
                <input asp-for="School.School_Address" class="form-control" />
                <span asp-validation-for="School.School_Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="School.School_Mobile" class="control-label">School Mobile No.</label>
                <input asp-for="School.School_Mobile" class="form-control" />
                <span asp-validation-for="School.School_Mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="School.School_Webite" class="control-label">School Website</label>
                <input asp-for="School.School_Webite" class="form-control" />
                <span asp-validation-for="School.School_Webite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
