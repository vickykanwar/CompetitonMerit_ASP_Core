@page
@model CompetitonMerit_ASP_Core.Pages.Subjects.CreateModel

@{
    ViewData["Title"] = "Add Subject";
}

<h1>Add Subject</h1>

<h4>Subject</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Subject.Subject_Name" class="control-label">Subject Name</label>
                <input asp-for="Subject.Subject_Name" class="form-control" />
                <span asp-validation-for="Subject.Subject_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject.Subject_description" class="control-label">Subject Description</label>
                <input asp-for="Subject.Subject_description" class="form-control" />
                <span asp-validation-for="Subject.Subject_description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject.Subject_language" class="control-label">Subject Language</label>
                <input asp-for="Subject.Subject_language" class="form-control" />
                <span asp-validation-for="Subject.Subject_language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
